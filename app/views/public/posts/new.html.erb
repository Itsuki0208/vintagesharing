<h2 class= 'mt-3'>投稿画面</h2>
  <div class= 'container'>
    <div class= 'row'>
      <%= form_with model:@post, url:public_posts_path, local:true do |f| %>
          <h3>基本情報</h3>
            <div class = 'form-group'>
               <label for='shop_name'>店名</label><br />
                <%= f.text_field:shop_name %>
            </div>
            <!--f.text_fieldの長さを調整する  -->
            <div class = 'form-group'>
               <label for='shop_name_kana'>店名(フリガナ)</label><br />
                <%= f.text_field:shop_name_kana %>
            </div>
          <h3>所在地情報</h3>  
            <div class = 'form-group'>
               <label for='telephone_number'>電話番号</label><br />
                <%= f.text_field:telephone_number %>
            </div>
            <div class = 'form-group'>
               <label for='address'>住所</label><br />
                <%= f.text_field:address %>
                <%= f.text_field:address %>
            </div>
          <h3>取り扱いジャンル</h3>
            <div class= 'form-group'>
              <%= f.label :genre, 'ジャンル1' %>
              <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |genre| %>
                <%= genre.label do %>
                  <%= genre.check_box %>
                  <%= genre.text %>
                <% end %>
              <% end %>  
            </div>
        
        <%= f.submit '登録する' %>  
          
      <% end %>
    </div>
  </div>

